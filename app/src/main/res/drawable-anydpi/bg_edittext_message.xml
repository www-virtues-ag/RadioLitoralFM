<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#0B0D10"/>
            <stroke android:width="@dimen/_2sdp" android:color="#3D8BFF"/>
            <corners android:radius="@dimen/_14sdp"/>
            <padding
                android:left="@dimen/_12sdp"
                android:top="@dimen/_12sdp"
                android:right="@dimen/_12sdp"
                android:bottom="@dimen/_12sdp"/>
        </shape>
    </item>

    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#0B0D10"/>
            <stroke android:width="1.5dp" android:color="#2A2E35"/>
            <corners android:radius="@dimen/_14sdp"/>
            <padding
                android:left="@dimen/_12sdp"
                android:top="@dimen/_12sdp"
                android:right="@dimen/_12sdp"
                android:bottom="@dimen/_12sdp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0B0D10"/>
            <stroke android:width="1dp" android:color="#1F232A"/>
            <corners android:radius="@dimen/_14sdp"/>
            <padding
                android:left="@dimen/_12sdp"
                android:top="@dimen/_12sdp"
                android:right="@dimen/_12sdp"
                android:bottom="@dimen/_12sdp"/>
        </shape>
    </item>

</selector>
