<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC1D23"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/BgUp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="top|end"
        android:adjustViewBounds="true"
        android:contentDescription="Background superior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_cima" />

    <ImageView
        android:id="@+id/BgDown"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="bottom|start"
        android:adjustViewBounds="true"
        android:contentDescription="Background inferior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_baixo" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bg_news" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/bt_back"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/btn_voltar_radio_escuro" />

                        <ImageView
                            android:id="@+id/bt_home"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/btn_home_radio_escuro" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        app:srcCompat="@drawable/logo_radio_escuro" />

                    <LinearLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/bt_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/btn_menu_radio_escuro" />

                        <ImageView
                            android:id="@+id/bt_notif"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_6sdp"
                            app:srcCompat="@drawable/btn_notif_radio_escuro" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltxtnews"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/txt_noticias"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_100sdp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_24sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/banner_main">

                            <WebView
                                android:id="@+id/webView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:visibility="gone" />

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:paddingHorizontal="@dimen/_24sdp">

                    <ImageView
                        android:id="@+id/btn_buscar_noticias"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Buscar"
                        app:srcCompat="@drawable/btn_buscar_noticia" />

                    <EditText
                        android:id="@+id/forma_campo_noticia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_toEndOf="@id/btn_buscar_noticias"
                        android:background="@drawable/forma_campo_noticia"
                        android:hint="O que estÃ¡ procurando?"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#AAAAAA"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_24sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="CATEGORIAS"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/txt_pref_noticia"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/txt_pref_noticia" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNoticias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="@dimen/_22sdp"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/_32sdp" />


            </LinearLayout>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/rlNavBar"
        layout="@layout/item_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="bottom"
        android:elevation="@dimen/_8sdp" />

</FrameLayout>