<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC1D23"
    android:fitsSystemWindows="true">


    <!-- Backgrounds decorativos -->
    <ImageView
        android:id="@+id/BgUp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="top|end"
        android:adjustViewBounds="true"
        android:contentDescription="Background superior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_cima" />

    <ImageView
        android:id="@+id/BgDown"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="bottom|start"
        android:adjustViewBounds="true"
        android:contentDescription="Background inferior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_baixo" />

    <!-- Layout Principal com Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bg_news" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <RelativeLayout
                    android:id="@+id/rlHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_16sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bt_back"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Voltar"
                            app:srcCompat="@drawable/btn_voltar_radio_escuro" />

                        <ImageView
                            android:id="@+id/bt_home"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Home"
                            app:srcCompat="@drawable/btn_home_radio_escuro" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLogoRadio"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="Logo Rádio Litoral"
                        app:srcCompat="@drawable/logo_radio_escuro" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bt_menu"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Menu"
                            app:srcCompat="@drawable/btn_menu_radio_escuro" />

                        <ImageView
                            android:id="@+id/bt_notif"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:contentDescription="Notificações"
                            app:srcCompat="@drawable/btn_notif_radio_escuro" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lltxtnews"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/txt_noticias"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_100sdp">


                </LinearLayout>

                <!-- Publicidade -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_24sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_2sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:background="@drawable/banner_radio" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:paddingHorizontal="@dimen/_24sdp">

                    <ImageView
                        android:id="@+id/btn_buscar_noticias"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentStart="true"
                        android:contentDescription="Buscar"
                        app:srcCompat="@drawable/btn_buscar_noticia" />

                    <EditText
                        android:id="@+id/forma_campo_noticia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_toEndOf="@id/btn_buscar_noticias"
                        android:background="@drawable/forma_campo_noticia"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:hint="O que está procurando?"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColorHint="#AAAAAA"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                </RelativeLayout>

                <!-- Texto CATEGORIAS -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_24sdp"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="CATEGORIAS"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!-- Grid de Categorias com ScrollView VERTICAL -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:paddingHorizontal="@dimen/_14sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_4sdp">

                        <RelativeLayout
                            android:id="@+id/menu_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/white"
                                android:overScrollMode="ifContentScrolls"
                                android:padding="@dimen/_12sdp"
                                android:scrollbarStyle="outsideOverlay"
                                android:scrollbars="vertical"
                                android:fillViewport="true"
                                android:nestedScrollingEnabled="true"
                                android:fadeScrollbars="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:clipChildren="true"
                                    android:clipToPadding="true"
                                    android:orientation="vertical">

                                    <!-- Linha 1 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="@dimen/_14sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_1"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Educação"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />


                                        <TextView
                                            android:id="@+id/category_2"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Brasil"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_3"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Esporte"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                    <!-- Linha 2 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_12sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_4"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Economia"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_5"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Política"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_6"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_30sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Cidade"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                    <!-- Linha 3 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_14sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_7"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Polícia"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_8"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Saúde"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_9"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_30sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Geral"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                    <!-- Linha 4 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_14sdp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_10"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Estrangeiro"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_11"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Eventos"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_12"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Trânsito"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                    <!-- Linha 5 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_14sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_13"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Município"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_14"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Estado"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                        <TextView
                                            android:id="@+id/category_15"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Tempo"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                    <!-- Linha 6 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/category_16"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Agro"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />


                                        <TextView
                                            android:id="@+id/category_17"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_marginEnd="@dimen/_10sdp"
                                            android:alpha="0.6"
                                            android:background="@drawable/bg_category"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:onClick="onClick"
                                            android:text="Ciência"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_9sdp"
                                            android:textStyle="bold"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:maxLines="1" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.core.widget.NestedScrollView>

                            <!-- Barra de scroll vertical do lado direito -->
                            <View
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_4sdp"
                                />

                            <!-- Ícone de Help sobre o menu_category -->
                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:contentDescription="Ajuda"
                                app:srcCompat="@drawable/ic_help_config_escuro"
                                android:elevation="@dimen/_10sdp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/txt_pref_noticia"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:srcCompat="@drawable/txt_pref_noticia" />

                <!-- RecyclerView para Notícias -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNoticias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:paddingStart="@dimen/_minus16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_32sdp"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never" />


            </LinearLayout>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>