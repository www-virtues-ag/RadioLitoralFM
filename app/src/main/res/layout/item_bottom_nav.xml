<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlNavBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:background="@drawable/forma_barra_bottom">

    <LinearLayout
        android:id="@+id/llNavContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/bt_promotion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_promotion"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/btn_promo_barra_off" />

            <TextView
                android:id="@+id/txt_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Promoções"
                android:textColor="@color/vermelho_letter"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/traco_barra" />

        <LinearLayout
            android:id="@+id/bt_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/nav_news"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/btn_noticia_barra_off" />

            <TextView
                android:id="@+id/txt_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/nav_news"
                android:textColor="@color/vermelho_letter"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/traco_barra" />

        <LinearLayout
            android:id="@+id/bt_radio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_radio"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/nav_live"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/btn_ao_vivo_barra_off" />

            <TextView
                android:id="@+id/txt_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/nav_live"
                android:textColor="@color/vermelho_letter"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/traco_barra" />

        <LinearLayout
            android:id="@+id/bt_program"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_program"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/btn_prog_barra_off" />

            <TextView
                android:id="@+id/txt_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Programas"
                android:textColor="@color/vermelho_letter"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_35sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/traco_barra" />

        <LinearLayout
            android:id="@+id/bt_whatsapp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_whatsapp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/bt_whatsapp" />

            <TextView
                android:id="@+id/txt_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Whatsapp"
                android:textColor="@color/vermelho_letter"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/montserrat_semibold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
