<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_2sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#202832">

        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/platform_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/rede_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/platform_icon"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Radio Litoral FM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_170sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Há 2 horas"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:maxLines="10"
                android:textColor="?android:textColorPrimary"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    app:cardBackgroundColor="@color/colorBlack"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/colorBlack"
                        android:scaleType="fitCenter" />

                    <WebView
                        android:id="@+id/post_video_webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlack"
                        android:visibility="gone" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/video_play_indicator"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_play_indicator"
                    android:clickable="true"
                    android:contentDescription="Reproduzir vídeo"
                    android:focusable="true"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/ic_media_play" />

                <TextView
                    android:id="@+id/media_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/bg_media_counter"
                    android:padding="@dimen/_6sdp"
                    android:text="+3"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_like"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="Curtir"
                    android:padding="@dimen/_7sdp"
                    app:srcCompat="@drawable/ic_heart_not_filled" />

                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="Salvar"
                    android:padding="@dimen/_7sdp"
                    app:srcCompat="@drawable/ic_bookmark_not_filled" />

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="Compartilhar"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_share" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/bt_expand"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:contentDescription="Expandir"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/bt_expand" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hidden_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:padding="@dimen/_12sdp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hidden_platform_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/hidden_no_view"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:srcCompat="@drawable/no_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Post oculto"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Segure p/ mostrar"
                    android:textColor="#CCFFFFFF"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/montserrat_regular" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>