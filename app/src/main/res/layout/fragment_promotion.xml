<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_promotion"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rlNavBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/forma_barra_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/btnNav1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_promo_barra_on" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/btnNav2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_noticia_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/btnNav3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_ao_vivo_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/btnNav4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_prog_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/btnNav5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_wp_barra" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:contentDescription="Voltar"
            app:srcCompat="@drawable/btn_voltar_radio" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mt_logo"
            android:contentDescription="Logo Rádio Litoral"
            app:srcCompat="@drawable/logo_radio" />

        <ImageView
            android:id="@+id/bt_menu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:contentDescription="Menu"
            app:srcCompat="@drawable/btn_menu_radio" />

        <ImageView
            android:id="@+id/bt_home"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/bt_back"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            app:srcCompat="@drawable/btn_home_radio" />

        <ImageView
            android:id="@+id/bt_notif"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignTop="@id/bt_home"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_23sdp"
            android:background="@android:color/transparent"
            android:contentDescription="Notificações"
            app:srcCompat="@drawable/btn_notif_radio" />

        <TextView
            android:id="@+id/txt_litoral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/insanibu"
            android:text="PROMOÇÕES"
            android:textColor="#EC1D23"
            android:textSize="@dimen/_26sdp"
            app:fontFamily="@font/insanibu" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_below="@+id/txt_litoral"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@drawable/barra_programa_main" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/rlNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_main">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_promo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_empty_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nenhuma promoção disponível"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_medium"
                app:fontFamily="@font/montserrat_medium"/>

            <ProgressBar
                android:id="@+id/progress_promo"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>