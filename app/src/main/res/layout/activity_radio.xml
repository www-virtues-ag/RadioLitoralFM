<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/BgUp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="top|end"
        android:adjustViewBounds="true"
        android:contentDescription="Background superior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_cima" />

    <ImageView
        android:id="@+id/BgDown"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_gravity="bottom|start"
        android:adjustViewBounds="true"
        android:contentDescription="Background inferior"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_radio_baixo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@drawable/bg_radio_cima"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingTop="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/btnVoltar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Voltar"
                    app:srcCompat="@drawable/btn_voltar_radio" />

                <ImageView
                    android:id="@+id/ivLogoRadio"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerInParent="true"
                    android:contentDescription="Logo Rádio Litoral"
                    app:srcCompat="@drawable/logo_radio" />

                <ImageView
                    android:id="@+id/btn_Menu"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    app:srcCompat="@drawable/btn_menu_radio" />

                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_below="@+id/btnVoltar"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Home"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:srcCompat="@drawable/btn_home_radio" />

                <ImageView
                    android:id="@+id/btn_Notif"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_below="@+id/btn_Menu"
                    android:layout_alignEnd="@+id/btn_Menu"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Notificações"
                    app:srcCompat="@drawable/btn_notif_radio" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTransmitir"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnCast"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="Transmitir"
                app:srcCompat="@drawable/btn_cast_radio" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/equalizerLeft"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_70sdp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/equalizer_grey" />

            <RelativeLayout
                android:id="@+id/rlVideoFrame"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivVideoBackground"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:scaleType="fitXY"
                    android:paddingBottom="@dimen/_10sdp"
                    app:srcCompat="@drawable/forma_player_radio" />

                <!-- WEBVIEW SUBSTITUINDO O EXOPLAYER -->
                <WebView
                    android:id="@+id/webViewPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@android:color/black" />

            </RelativeLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/equalizerRight"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_minus9sdp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/equalizer_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_6sdp">

            <LinearLayout
                android:id="@+id/llInfoPrograma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_6sdp"
                android:orientation="horizontal"
                android:background="@drawable/forma_prog_radio"
                android:padding="@dimen/_6sdp">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:background="@drawable/traco_barra" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvNomePrograma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Nome do programa ao vivo"
                        android:textColor="#4A1D1F"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNomeLocutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Nome do locutor"
                        android:textColor="#4A1D1F"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInfoMusica"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tvNomeMusica"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Nome música"
                    android:textColor="#4A1D1F"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/diviserMusic"
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/traco_barra" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEscuteAoVivo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_watch_now"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_22sdp"
                android:contentDescription="Escute ao vivo"
                app:srcCompat="@drawable/btn_escute_radio" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPublicidade"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_12sdp">

            <ImageView
                android:id="@+id/publi_banner"
                android:layout_width="@dimen/_280sdp"
                android:scaleType="fitXY"
                android:layout_height="@dimen/_80sdp"
                android:contentDescription="Publicidade"
                app:srcCompat="@drawable/banner_radio" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlNavBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="@dimen/_9sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6"
            android:background="@drawable/forma_barra_bottom"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/btn_news"
                android:layout_width="0dp"
                android:layout_height="@dimen/_28sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Promoções"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_promo_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_32sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/bt_news"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Notícias"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_noticia_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_32sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/bt_radio"
                android:layout_width="0dp"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:contentDescription="Ao Vivo"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_ao_vivo_barra_on" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_32sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/bt_program"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Programação"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_prog_barra_off" />

            <ImageView
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_32sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/traco_barra" />

            <ImageView
                android:id="@+id/bt_whatsapp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="WhatsApp"
                android:focusable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/btn_wp_barra" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>