<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/schedule_item_image_card"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/schedule_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/item_content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/schedule_item_image_card"
        app:layout_constraintTop_toTopOf="@id/schedule_item_image_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/string_time"
                android:textAllCaps="true"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/montserrat_light" />

            <TextView
                android:id="@+id/txt_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/montserrat_medium"
                tools:text="10h00" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_extrabold"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/montserrat_extrabold"
            tools:text="60 Minutos de Música" />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="3"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_8sdp"
            app:fontFamily="@font/montserrat_medium"
            tools:text="A gente sabe que tem hora que vocês só querem ouvir aquela musiquinha boa, né! E aqui na Litoral, às 16 horas, são 60 minutos de música sem parar. Isso aí, sem intervalo, sem interrupções e sem pausas. E olha, é só música boa, os maiores sucessos e as canções preferidas de vocês, então, é só curtir!" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bt_save_schedule"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_14sdp"
        app:srcCompat="@drawable/bt_save_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>