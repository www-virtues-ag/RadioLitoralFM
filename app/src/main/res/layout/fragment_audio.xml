<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.mediarouter.app.MediaRouteButton
        android:id="@+id/media_route_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/menu_cast"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/BgUp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_260sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_radio_cima" />

        <ImageView
            android:id="@+id/BgDown"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_260sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_radio_baixo" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/bt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_voltar_radio" />

                <ImageView
                    android:id="@+id/bt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_home_radio" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                app:srcCompat="@drawable/logo_radio" />

            <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/bt_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/btn_menu_radio" />

                <ImageView
                    android:id="@+id/bt_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_6sdp"
                    app:srcCompat="@drawable/bt_notification" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlPlayerContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@id/ll_top">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_audio2"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignStart="@+id/cover_placeholder"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/equalizer_grey"
                app:srcCompat="@drawable/equalizer_start" />

            <ImageView
                android:id="@+id/album"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/img_elipse_inicial">

            </ImageView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_audio1"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignEnd="@+id/cover_placeholder"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/equalizer_grey"
                app:srcCompat="@drawable/equalizer_start" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cover_placeholder"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="@dimen/_140sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/cover_album"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:contentDescription="Apresentador"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_launcher" />

            </androidx.cardview.widget.CardView>

            <br.com.fivecom.litoralfm.ui.views.CircularVolumeSeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_centerInParent="true"
                app:cv_max="100"
                app:cv_progress="75"
                app:cv_trackColor="#E0E0E0"
                app:cv_progressColor="#E53935"
                app:cv_thumbColor="#E53935"
                app:cv_strokeWidth="@dimen/_2sdp"
                app:cv_thumbRadius="@dimen/_6sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover_placeholder"
                android:layout_toStartOf="@+id/bt_play"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textColor="#740C0F"
                android:text="0%"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"
                app:fontFamily="@font/montserrat_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover_placeholder"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/bt_play"
                android:text="100%"
                android:textColor="#740C0F"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"
                app:fontFamily="@font/montserrat_semibold" />

            <ImageView
                android:id="@+id/bt_play"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="Play/Pause"
                app:srcCompat="@drawable/btn_pause_radio" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_progress" />

        </RelativeLayout>

            <LinearLayout
                android:id="@+id/llInfoPrograma"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/forma_prog_radio"
                android:orientation="horizontal"
                android:layout_below="@+id/rlPlayerContainer"
                android:padding="@dimen/_9sdp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/barra_radio" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_program"
                        style="@style/TextRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:text="Nome do programa ao vivo"
                        android:textColor="#4A1D1F"
                        android:textSize="@dimen/_9sdp"
                        app:fontFamily="@font/montserrat_bold" />

                    <TextView
                        android:id="@+id/name_locutor"
                        style="@style/TextRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:text="Nome do locutor"
                        android:textColor="#4A1D1F"
                        android:textSize="@dimen/_9sdp"
                        app:fontFamily="@font/montserrat_semibold" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/llInfoMusica"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/rlPlayerContainer">

                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/vw_music">

                <TextView
                    android:id="@+id/music_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextRun"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Nome mÃºsica"
                    android:textColor="#4A1D1F"
                    android:textSize="@dimen/_9sdp"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:fontFamily="@font/montserrat_bold" />

                </RelativeLayout>

                <View
                    android:id="@+id/vw_music"
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/barra_radio" />

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_publi_live"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_above="@+id/rlNavBar"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btn_watch_now"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/btn_assita_radio" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_below="@+id/btn_watch_now"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/banner_main">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:visibility="gone" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <include
            android:id="@+id/rlNavBar"
            layout="@layout/item_bottom_nav"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_8sdp"
            android:layout_height="@dimen/_50sdp" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
