<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/bg_main"
    android:fitsSystemWindows="true">

    <br.com.fivecom.litoralfm.ui.views.videos.IntroductionView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_splash"
        app:measureBasedOnAspectRatio="false"
        app:useTextureViewBacking="true"
        app:videoScale="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_copyright"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/cp_splash" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/_30sdp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ic_loading"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/loading"/>

        <TextView
            android:id="@+id/txt_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARREGANDO"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ic_loading"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_extrabold"
            app:fontFamily="@font/montserrat_extrabold"/>

        <TextView
            android:id="@+id/txt_please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/white"
            android:layout_below="@+id/txt_loading"
            android:text="AGUARDE UM MOMENTO POR FAVOR..."/>

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_please"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/traco_splash"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
