<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp">

            <RelativeLayout
                android:id="@+id/category"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_25sdp"

                android:background="@drawable/bg_category_badge">
                <TextView
                    android:id="@+id/txt_categoria_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semibold"
                    app:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:text="Educação" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_fechar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_fecha_noticia_desc"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_titulo_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_bold"
            app:fontFamily="@font/montserrat_bold"
            android:textColor="#531414"
            android:textSize="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:text="Qualificar ES oferece 20 mil vagas em cursos de graça; saiba como se inscrever" />

        <TextView
            android:id="@+id/txt_descricao_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_semibold"
            app:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:text="Para participar, é preciso ter 16 anos ou mais, acesso à internet para acompanhar as aulas, realizadas totalmente de forma remota." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="@font/montserrat_semibold"
                app:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:text="Compartilhar" />

            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_share_whatsapp"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/btn_whats_noticia_desc"
                    android:contentDescription="WhatsApp" />

                <ImageView
                    android:id="@+id/btn_share_facebook"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/btn_face_noticia_desc"
                    android:contentDescription="Facebook" />

                <ImageView
                    android:id="@+id/btn_share_instagram"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/btn_insta_noticia_desc"
                    android:contentDescription="Instagram" />

                <ImageView
                    android:id="@+id/btn_share_x"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/btn_xnoticia_desc"
                    android:contentDescription="X" />

                <ImageView
                    android:id="@+id/btn_share_link"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/btn_copiar_link_desc"
                    android:contentDescription="X" />

            </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_img_noticia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            android:clipToPadding="true"
            android:clipChildren="true">

            <ImageView
                android:id="@+id/img_noticia_principal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:srcCompat="@drawable/icon_noticia_main" />

            <TextView
                android:id="@+id/txt_data_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:text="14h09   19/05/2025" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_conteudo_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            app:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="Estão abertas as inscrições para 20 mil vagas em cursos profissionalizantes gratuitos para fazer sem sair de casa. São oportunidades para fazer o programa Qualificar ES. As inscrições vão até o dia 23 de maio, pela internet..." />

    </LinearLayout>

</ScrollView>