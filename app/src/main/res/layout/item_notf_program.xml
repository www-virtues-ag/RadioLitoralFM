<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_80sdp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardBackgroundColor="@android:color/transparent"
            android:clipToOutline="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_program"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/live" />

                <ImageView
                    android:id="@+id/img_unread_indicator"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="top|start"
                    android:layout_margin="@dimen/_5sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/circle_preference" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título da notícia"
                android:textStyle="bold"
                android:textColor="#531414"
                android:textSize="@dimen/_11sdp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_extrabold"
                app:fontFamily="@font/montserrat_extrabold" />

            <TextView
                android:id="@+id/txt_desc_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="Com as configurações deixe o app a sua cara!"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                app:fontFamily="@font/montserrat_medium" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#D9D9D9"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>
