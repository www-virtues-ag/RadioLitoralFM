<resources>

    <style name="ThemeAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border_alert</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#C83C28</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Style">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--<style name="AppTheme.Light" parent="Style.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>-->

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextRun" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="Theme.CastVideosDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextViewNotification" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="ImageViewNotification">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:layout_height">@dimen/_300sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize2" parent="">
        <item name="cornerSize">35%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize3" parent="">
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_8sdp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Letter" parent="Widget.AppCompat.TextView">
        <item name="android:letterSpacing">0.18</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border_alert</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.Oval" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Square" parent="">
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Square2" parent="">
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Square3" parent="">
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Square4" parent="">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Square5" parent="">
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="BlackAccent" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="WhiteAccent" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
